@model EventEase.Models.EventSearchViewModel

@{
    ViewData["Title"] = "Search Events";
}

<h2>Search Events</h2>

<div class="card">
    <div class="card-body">
        <form asp-controller="Event" asp-action="Search" method="post">
            <div class="form-group mb-4">
                <label asp-for="SearchString" class="control-label">Event Name</label>
                <input asp-for="SearchString" class="form-control" />
                <span asp-validation-for="SearchString" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="SearchDate" class="control-label">Event Date</label>
                <input asp-for="SearchDate" type="date" class="form-control" />
                <span asp-validation-for="SearchDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-custom">Search</button>
                <a asp-controller="Event" asp-action="Index" class="btn btn-secondary">Back to Events</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}