@model IEnumerable<EventEase.Models.Venue>

<h2>Venues</h2>

<p class="text-end">
    <a asp-controller="Venue" asp-action="Create" class="btn btn-custom">Add New Venue</a>
</p>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover table-custom">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var venue in Model)
                    {
                        <tr>
                            <td>@venue.VenueName</td>
                            <td>@venue.Location</td>
                            <td>@venue.Capacity</td>
                            <td>
                                @if (!string.IsNullOrEmpty(venue.ImageUrl))
                                {
                                    <img src="@venue.ImageUrl" alt="Venue Image" width="50" class="img-thumbnail rounded-circle" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Venue" asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-sm btn-custom me-2">Edit</a>
                                <a asp-controller="Venue" asp-action="Details" asp-route-id="@venue.VenueId" class="btn btn-sm btn-info me-2">Details</a>
                                <a asp-controller="Venue" asp-action="Delete" asp-route-id="@venue.VenueId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No venues available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>